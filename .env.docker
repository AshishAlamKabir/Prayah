# Docker Environment Configuration for Prayas
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://prayas_user:prayas_password@postgres:5432/prayas_db
PGHOST=postgres
PGPORT=5432
PGUSER=prayas_user
PGPASSWORD=prayas_password
PGDATABASE=prayas_db

# Application Configuration
NODE_ENV=production
PORT=5000
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Razorpay Payment Configuration
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# SendGrid Email Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Domain Configuration
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:80,https://your-domain.com

# Redis Configuration (if using Redis for sessions)
REDIS_URL=redis://redis:6379